/* Anclora Design System - Variables CSS */
@import url('https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200');

/* Reset and base styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Aplicación global de tipografía Anclora */
@layer base {
  html {
    font-family: var(--font-body);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.5;
    color: var(--color-neutral-900);
    background-color: var(--color-neutral-100);
  }

  /* Jerarquía tipográfica oficial Anclora */
  h1 {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-neutral-900);
  }

  h2 {
    font-family: var(--font-heading);
    font-size: 28px;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-neutral-900);
  }

  h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-neutral-900);
  }

  h4 {
    font-family: var(--font-heading);
    font-size: 20px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-neutral-900);
  }

  p {
    font-family: var(--font-body);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.5;
    color: var(--color-neutral-900);
  }

  small {
    font-family: var(--font-body);
    font-size: 12px;
    font-weight: 400;
    line-height: 1.5;
    color: var(--color-neutral-900);
  }
}

.App {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Maritime theme colors */
:root {
  /* Paleta de Colores Oficial Anclora */
  --color-primary: #006EE6;
  --color-primary-dark: #0056B8;
  --color-secondary: #00B8D9;
  --color-success: #28A745;
  --color-warning: #FFC107;
  --color-danger: #DC3545;
  --color-neutral-100: #FFFFFF;
  --color-neutral-200: #F5F5F5;
  --color-neutral-300: #E0E0E0;
  --color-neutral-900: #0D0D0D;

  /* Tipografía Oficial */
  --font-heading: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  --font-body: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;

  /* Espaciado Sistema 8px */
  --space-1: 8px;
  --space-2: 16px;
  --space-3: 24px;
  --space-4: 32px;
  --space-5: 40px;
  --space-6: 48px;

  /* Transiciones */
  --transition-fast: 150ms ease-in-out;
  --transition-medium: 300ms ease;

  /* Gradientes marítimos actualizados */
  --wave-gradient: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  --ocean-gradient: linear-gradient(180deg, var(--color-neutral-100) 0%, var(--color-neutral-200) 100%);
}

/* Cards oficiales según guía de estilos Anclora */
.card, .dashboard-card, .form-card {
  background: var(--color-neutral-200);
  border: 1px solid var(--color-neutral-300);
  border-radius: 12px;
  padding: var(--space-3);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: var(--transition-fast);
}

.card:hover, .dashboard-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
}

.dashboard-section {
  background: var(--color-neutral-200);
  border-radius: 12px;
  padding: var(--space-3);
  margin-bottom: var(--space-3);
  border: 1px solid var(--color-neutral-300);
}

.dashboard-section h3 {
  font-family: var(--font-heading);
  font-size: 20px;
  font-weight: 500;
  color: var(--color-neutral-900);
  margin-bottom: var(--space-2);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-2);
}

/* Formularios oficiales */
.form-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: var(--wave-gradient);
  padding: var(--space-3);
}

.form-card {
  background: var(--color-neutral-100);
  border-radius: 12px;
  padding: var(--space-4);
  max-width: 400px;
  width: 100%;
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: var(--space-3);
}

.form-label {
  display: block;
  font-family: var(--font-body);
  font-size: 14px;
  font-weight: 500;
  color: var(--color-neutral-900);
  margin-bottom: var(--space-1);
}

.form-input, .form-select, .form-textarea {
  width: 100%;
  padding: var(--space-2);
  border: 1px solid var(--color-neutral-300);
  border-radius: 8px;
  font-family: var(--font-body);
  font-size: 16px;
  color: var(--color-neutral-900);
  background-color: var(--color-neutral-100);
  transition: var(--transition-fast);
}

.form-input:focus, .form-select:focus, .form-textarea:focus {
  outline: 2px solid var(--color-primary);
  outline-offset: 2px;
  border-color: var(--color-primary);
}

.form-input:disabled, .form-select:disabled, .form-textarea:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background-color: var(--color-neutral-200);
}

.form-actions {
  display: flex;
  gap: var(--space-2);
  justify-content: flex-end;
  margin-top: var(--space-4);
}

/* Iconos usando Material Symbols Rounded */
.icon {
  font-family: 'Material Symbols Rounded';
  font-variation-settings: 'FILL' 0, 'wght' 400;
  font-size: 24px;
  color: var(--color-neutral-900);
}

.icon-lg {
  font-size: 32px;
}

.icon-sm {
  font-size: 20px;
}

.icon-active {
  color: var(--color-primary);
}

.icon-success {
  color: var(--color-success);
}

.icon-warning {
  color: var(--color-warning);
}

.icon-danger {
  color: var(--color-danger);
}